package Core;

import java.util.Random;

public class AtaqueHacha implements Ataque {

    @Override
    public String toString() {
        return "hacha";
    }

    @Override
    public int lanzaAtaque(Personaje enemigo) {
        Random random = new Random();
        int ataque = 90;
        int acierta = random.nextInt(100) < 65 ? 1 : 0;
        double factor = random.nextDouble();
        int resultado = (int) (ataque * acierta * factor);
        enemigo.updateSalud(-resultado);
        return resultado;
    }
}
